<?xml version="1.0" encoding="UTF-8"?>
<pages>
	<page name="/discussion/forums" parent="commons/header">
		<position name="leftColumn" width="200px" layout="fill">
			<fragment refer="discussionFragment" view="Actions">
				<rules>
					<rule name="securityRule" code="discussion-topic-add|discussion-forum-add"/>
				</rules>
			</fragment>
		</position>
		<fragment refer="tagFragment" view="Form">
				<title>Tags</title>
				<preferences>
					<paramName>topicId</paramName>
					<entity>Topic</entity>
				</preferences>
			</fragment>
		<position name="mainColumn" layout="fill">
			<fragment refer="topicFragment" view="Form">
				<title>话题信息</title>
			</fragment>
		</position>
	</page>
</pages>