<?xml version="1.0" encoding="UTF-8"?>
<pages>
	<page name="/discussion/topics_list" parent="commons/header">
		<position name="leftColumn" width="200px" layout="fill">
			<fragment refer="discussionFragment" view="Actions">
				<rules>
					<rule name="securityRule" code="discussion-topic-add|discussion-forum-add"/>
				</rules>
			</fragment>
		</position>
		<position name="mainColumn" layout="fill">
			<fragment refer="topicFragment" view="List">
				<title>话题列表</title>
				<rules>
					<rule name="securityRule" code="discussion-topic-view"/>
				</rules>
			</fragment>
		</position>
	</page>
</pages>