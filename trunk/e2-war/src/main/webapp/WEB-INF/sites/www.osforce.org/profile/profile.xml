<?xml version="1.0" encoding="UTF-8"?>
<pages>
	<page name="profile/profile" parent="commons/header">
		<position name="leftColumn" width="200px">
			<fragment refer="tagFragment" view="Cloud">
				<title>Tag Cloud</title>
				<preferences>
					<limit>20</limit>
				</preferences>
			</fragment>
			<fragment refer="blogPostFragment" view="Top">
				<title>热门博文</title>
				<preferences>
					<limit>5</limit>
				</preferences>
			</fragment>
			<fragment refer="topicFragment" view="Top">
				<title>热门讨论</title>
				<preferences>
					<limit>5</limit>
				</preferences>
			</fragment>
			<fragment refer="linkFragment" view="List">
				<title>我关注的</title>
				<preferences>
					<limit>10</limit>
					<entity>Profile</entity>
					<mode>link-from</mode>
				</preferences>
			</fragment>
			<fragment refer="linkFragment" view="List">
				<title>关注我的</title>
				<preferences>
					<limit>10</limit>
					<entity>Profile</entity>
					<mode>link-to</mode>
				</preferences>
			</fragment>
		</position>
		<position name="mainColumn">
			<fragment refer="profileFragment" view="Profile"/>
			<fragment refer="activityFragment" view="Form">
				<title>微薄</title>
				<preferences>
					<activityType>user-input</activityType>
				</preferences>
				<rules>
					<rule name="securityRule" code="vblog-activity-add" 
					userRequired="true" projectRequired="true"/>
				</rules>
			</fragment>
			<fragment refer="activityFragment" view="List">
				<title>最新动态</title>
				<rules>
					<rule name="securityRule" code="vblog-activity-view"
					projectRequired="true"/>
				</rules>
				<preferences>
					<activityTypes>user-input,Profile,BlogPost,Topic,Reply</activityTypes>
				</preferences>
			</fragment>
		</position>
		<position name="rightColumn" width="280px" layout="fill">
			<fragment refer="profileFragment" view="Actions" cache="300"/>
			<fragment refer="profileFragment" view="Info" cache="300">
				<title>基本信息</title>
			</fragment>
			<fragment refer="messageFragment" view="Info" cache="300">
				<title>收件箱</title>
				<rules>
					<rule name="securityRule" code="message-message-view"
					projectRequired="true"/>
				</rules>
			</fragment>
			<fragment refer="memberFragment" view="Info" cache="300">
				<title>好友请求</title>
			</fragment>
			<fragment refer="tagFragment" view="Form">
				<title>Tags</title>
				<preferences>
					<paramName>profileId</paramName>
					<entity>Profile</entity>
				</preferences>
			</fragment>
			<fragment refer="questionFragment" view="Recent">
				<title>最新问题</title>
				<preferences>
					<limit>5</limit>
				</preferences>
			</fragment>
			<fragment refer="blogPostFragment" view="Recent">
				<title>最新博文</title>
				<preferences>
					<limit>5</limit>
				</preferences>
			</fragment>
			<fragment refer="topicFragment" view="Recent">
				<title>最新讨论</title>
				<preferences>
					<limit>5</limit>
				</preferences>
			</fragment>
		</position>
	</page>
