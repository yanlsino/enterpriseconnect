			<fragment refer="memberFragment" view="List">
				<title>好友列表</title>
				<preferences>
					<pageSize>18</pageSize>
				</preferences>
				<rules>
					<rule name="securityRule" code="team-member-view" />
				</rules>
			</fragment>
		</position>
		<position name="rightColumn">
			<fragment refer="memberFragment" view="Info" cache="300">
				<title>好友请求</title>
			</fragment>
		</position>
